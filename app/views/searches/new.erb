<h1>New Search</h1>

<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :datetime, "Arrival" %>
    <div class="d-flex">
      <%= f.datetime_select :datetime, {discard_year: true, ampm: true, minute_step: 15}, class: "form-control" %>
    </div>
  </div>
  <%= f.submit "Submit", name: nil, class: "btn btn-primary" %>
<% end %>
